{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "types": ["vite/client"],
    "esModuleInterop": true,
    "incremental": true,
    "tsBuildInfoFile": ".tscache/tsconfig.node.tsbuildinfo"
  },
  "include": ["vite.config.ts"]
}
